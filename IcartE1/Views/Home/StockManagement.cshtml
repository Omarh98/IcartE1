
@{
    ViewData["Title"] = "Stock Management";
}


<div class="container py-4">
    <div class="row mt-5">
        <div class="col-md-3">
            <div class="card box-shadow" style="border-radius:10px;">
                <div class="card-header border border-light">
                    <h2 style="letter-spacing:0.2rem;" class="font-weight-light card-title text-center">Batches</h2>
                </div>
                <img src="~/images/batches.png"
                     class="card-img-top border-bottom border-top" height="200" width="250">


                <div class="card-body d-flex flex-column justify-content-between" style="height:12rem;">
                    <p class="card-text text-justify px-3">Have full control over your stocks. Create, Move and delete batches.</p>
                    <div class="text-center px-3"> <a class="btn btn-block btn-outline-primary mx-auto" style="border-radius:50px;" asp-controller="Batches" asp-action="Index">Go</a></div>
                </div>

            </div>
        </div>
        <div class="col-md-3">
            <div class="card box-shadow" style="border-radius:10px;">
                <div class="card-header border border-light">
                    <h2 style="letter-spacing:0.05rem;" class="font-weight-light card-title text-justify">Product Stocks</h2>
                </div>
                <img src="~/images/product-stocks.png"
                     class="card-img-top border-bottom border-top" height="200" width="250">


                <div class="card-body d-flex flex-column justify-content-between" style="height:12rem;">
                    <p class="card-text text-justify px-3">Keep track of all product stock levels and reorder whenever they fall below the set quantity.</p>
                    <div class="text-center px-3"> <a class="btn btn-block btn-outline-primary mx-auto" style="border-radius:50px;" asp-controller="Batches" asp-action="Products">Go</a></div>
                </div>

            </div>
        </div>
        <div class="col-md-3">
            <div class="card box-shadow" style="border-radius:10px;">
                <div class="card-header border border-light">
                    <h2 style="letter-spacing:0.2rem;" class="font-weight-light card-title text-center">Branches</h2>
                </div>
                <img src="~/images/branches.png"
                     class="card-img-top border-bottom border-top" height="200" width="250">


                <div class="card-body d-flex flex-column justify-content-between" style="height:12rem;">
                    <p class="card-text text-justify px-3">Create, Update and delete branches as you need.</p>
                    <div class="text-center px-3">
                        <a class="btn btn-block btn-outline-primary" style="border-radius:50px;" asp-controller="Branches" asp-action="Index">Go</a>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-md-3">
            <div class="card box-shadow" style="border-radius:10px;">
                <div class="card-header border border-light">
                    <h2 style="letter-spacing:0.2rem;" class="font-weight-light card-title text-center">Warehouses</h2>
                </div>
                <img src="~/images/warehouses.jpg"
                     class="card-img-top border-bottom border-top" height="200" width="250">


                <div class="card-body d-flex flex-column justify-content-between" style="height:12rem;">
                    <p class="card-text text-justify px-3">Create, Update and delete warehouses as you need.</p>
                    <div class="text-center px-3"> <a class="btn btn-block btn-outline-primary" style="border-radius:50px;" asp-controller="Warehouses" asp-action="Index">Go</a></div>
                </div>

            </div>
        </div>
    </div>
</div>

