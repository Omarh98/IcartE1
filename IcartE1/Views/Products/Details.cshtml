@model IcartE1.Data.Product

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <h1 class="display-4">Product Details</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReorderQuantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReorderQuantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductImages)
            </dt>
            <dd class="col-sm-10">
                <div class="row">
                    @foreach (var image in Model.ProductImages)
                    {
                    <img height="200" width="200" src="@image.Url" />

                    }
                </div>
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
